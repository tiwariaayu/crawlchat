datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type UserSettings {
  openaiApiKey String?
  systemPrompt String?
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  email           String   @unique
  settings        UserSettings?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  scrapes         Scrape[]
  threads         Thread[]
  scrapeItems     ScrapeItem[]
}

enum ScrapeStatus {
  pending
  scraping
  done
  error
}

type MetaTag {
  key String
  value String
}

model Scrape {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId

  url             String
  status          ScrapeStatus
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  title           String?

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  threads         Thread[]
  items           ScrapeItem[]
}

type ScrapeLink {
  url             String
  title           String?
}

type Message {
  llmMessage      Json
  links           ScrapeLink[]
}

enum ResponseType {
  short
  brief
  long
  points
}

model Thread {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId
  scrapeId        String   @db.ObjectId

  messages        Message[]
  responseType    ResponseType?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  scrape          Scrape   @relation(fields: [scrapeId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ScrapeItem {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  scrapeId        String   @db.ObjectId
  userId          String   @db.ObjectId

  url             String
  title           String?
  markdown        String?
  metaTags        MetaTag[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  scrape          Scrape   @relation(fields: [scrapeId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

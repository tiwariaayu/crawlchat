{
  "name": "source-sync",
  "version": "1.0.0",
  "description": "Source Sync",
  "main": "dist/index.js",
  "scripts": {
    "generate": "npx playwright install-deps chromium && npx playwright install chromium",
    "build": "npx tsc",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "dotenv -e ../.env -- npx tsx watch -r tsconfig-paths/register src/index.ts",
    "prettier": "prettier src --check",
    "cron": "npx tsc && node dist/cron.js \"$@\"",
    "test": "npx tsc && node --test dist/tests"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.13.1",
    "@types/turndown": "^5.0.6",
    "dotenv-cli": "^7.4.4",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "node-gyp": "^12.1.0"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@notionhq/client": "^4.0.1",
    "@packages/common": "*",
    "@packages/indexer": "*",
    "bullmq": "^5.66.4",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "ioredis": "^5.8.2",
    "lodash": "^4.17.21",
    "markdown-to-txt": "^2.0.1",
    "notion-to-md": "^3.1.9",
    "playwright": "^1.50.1",
    "prisma": "^6.2.1",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "uuid": "^11.1.0"
  }
}

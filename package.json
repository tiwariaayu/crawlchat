{
  "packageManager": "npm@8.5.0",
  "workspaces": [
    "packages/*",
    "front",
    "server",
    "source-sync",
    "discord-bot",
    "slack-app",
    "docs",
    "test"
  ],
  "dependencies": {
    "turbo": "^2.7.5"
  },
  "overrides": {
    "front": {
      "react-router-dom": "npm:react-router@^7.12.0"
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:core": "turbo run dev --filter=server --filter=front --filter=source-sync",
    "prettier": "turbo run prettier",
    "generate": "turbo run generate",
    "clean" : "turbo run clean && rm -rf packages/**/dist && rm -rf packages/**/node_modules && rm -rf node_modules && rm -rf .cache && rm -rf packages/**/.turbo && rm -rf .turbo"
  }
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

type UserSettings {
  openaiApiKey String?
  systemPrompt String?
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  email           String   @unique
  settings        UserSettings?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  scrapes         Scrape[]
  threads         Thread[]
  scrapeItems     ScrapeItem[]
}

enum ScrapeStatus {
  pending
  scraping
  done
  error
}

type MetaTag {
  key String
  value String
}

enum WidgetSize {
  small
  large
  full_screen
}

type WidgetConfig {
  size WidgetSize
}

model Scrape {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  userId          String   @db.ObjectId

  url             String
  status          ScrapeStatus
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  title           String?
  chatPrompt      String?
  mcpToolName     String?
  widgetConfig    WidgetConfig?
  indexer         String?
  discordServerId String?

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  threads         Thread[]
  items           ScrapeItem[]
}

type MessageSourceLink {
  url             String?
  title           String?
  score           Float?
}

type Message {
  uuid            String
  llmMessage      Json
  links           MessageSourceLink[]
  createdAt       DateTime? @default(now())
  pinnedAt        DateTime?
}

enum ResponseType {
  short
  brief
  long
  points
}

model Thread {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  scrapeId        String   @db.ObjectId

  messages        Message[]
  responseType    ResponseType?

  userId          String?   @db.ObjectId

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  openedAt        DateTime?
  isDefault       Boolean?

  scrape          Scrape   @relation(fields: [scrapeId], references: [id], onDelete: Cascade)
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([messages.uuid])
}

type Embedding {
  id String
}

enum ScrapeItemStatus {
  completed
  failed
}

model ScrapeItem {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  scrapeId        String   @db.ObjectId
  userId          String   @db.ObjectId

  url             String?
  title           String?
  markdown        String?
  metaTags        MetaTag[]
  embeddings      Embedding[]
  status          ScrapeItemStatus?
  error           String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  scrape          Scrape   @relation(fields: [scrapeId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([scrapeId, url])
}
